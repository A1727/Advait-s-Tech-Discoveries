import java.util.*;
import java.io.*;
class Robot
{
	String name;
	String color;
	int weight;
	Robot(String name,String color,int weight)
	{
		this.name=name;
		this.color=color;
		this.weight=weight;
	}
	void selfIntro()
	{
	System.out.println("Hello my name is "+this.name+"My color is "+this.color+"and my weight is "+this.weight);
	}
	public static void main(String[] args)
	{
		Robot r1=new Robot("Tom","Red",30);
		Robot r2=new Robot("Jerry","Blue",40);
		r1.selfIntro();
		r2.selfIntro();
	}
}	
